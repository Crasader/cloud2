{
    "name": "Yeelight Cloud",
    "description": "Yeelight Cloud Management System.",
    "keywords": ["yeelight", "laravel"],
    "license": "MIT",
    "homepage": "https://www.yeelight.com/",
    "authors": [
        {
            "name": "Sheldon Lee",
            "email": "xdlee110@gmail.com",
            "homepage": "https://www.yeelight.com/",
            "role": "Developer"
        }
    ],
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "fideloper/proxy": "~3.3",
        "dingo/api": "2.0.0-alpha1",
        "rap2hpoutre/laravel-log-viewer": "^0.10.0",
        "laravel/framework": "5.5.*",
        "laravel/tinker": "~1.0",
        "predis/predis": "~1.1",
        "doctrine/dbal": "~2.6",
        "itsgoingd/clockwork": "~1.14",
        "guzzlehttp/guzzle": "~6.3",
        "lukasoppermann/http-status": "^2.0",
        "prettus/l5-repository": "^2.6",
        "prettus/laravel-validation": "1.1.*",
        "barryvdh/laravel-ide-helper": "^2.4",
        "mcamara/laravel-localization": "1.2.*",
        "laravel/passport": "^4.0",
        "monarobase/country-list": "^2.0",
        "libern/timezone": "^1.0",
        "giggsey/libphonenumber-for-php": "~8.8",
        "torann/geoip": "1.0.*",
        "tymon/jwt-auth": "1.0.0-rc.1",
        "intervention/image": "^2.3",
        "intervention/imagecache": "~2.1"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~6.0",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "files": [
            "app/Helpers/Helpers.php"
        ],
        "psr-4": {
            "Yeelight\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan ide-helper:generate",
            "php artisan ide-helper:meta",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan ide-helper:generate",
            "php artisan ide-helper:meta",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
